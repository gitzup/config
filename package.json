{
    "name": "@gitzup/config",
    "version": "0.0.6",
    "license": "Apache-2.0",
    "author": "Arik Kfir <arik@kfirs.com>",
    "description": "TypeScript Configuration Utility",
    "homepage": "https://github.com/gitzup/config",
    "repository": "git@github.com:gitzup/config.git",
    "keywords": [
        "config",
        "typescript",
        "ts",
        "env"
    ],
    "bugs": {
        "url": "https://github.com/gitzup/config/issues"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "clean": "rm -rf ./dist",
        "build": "tsc",
        "build-watch": "tsc --watch",
        "preversion": "npm run test",
        "version": "npm run build",
        "postversion": "git push && git push --tags && npm publish --access public",
        "test": "nyc mocha",
        "coverage": "nyc report --reporter=json && codecov -f coverage/*.json"
    },
    "nyc": {
        "include": [
            "src/**/*.ts",
            "src/**/*.tsx"
        ],
        "extension": [
            ".ts",
            ".tsx"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "text",
            "text-summary"
        ],
        "sourceMap": true,
        "instrument": true
    },
    "dependencies": {
        "slf4ts-api": "1.1.1"
    },
    "devDependencies": {
        "@types/chai": "4.1.4",
        "@types/mocha": "5.2.5",
        "@types/node": "10.5.2",
        "chai": "4.1.2",
        "codecov": "3.0.4",
        "istanbul": "0.4.5",
        "mocha": "5.2.0",
        "nyc": "13.0.0",
        "slf4ts-console": "1.0.2",
        "source-map-support": "0.5.6",
        "ts-node": "7.0.0",
        "typescript": "2.9.2"
    }
}
